@page "/feedback"
@inject GlobalVariable GlobalState
@inject NavigationManager Navigation
@inherits CheckForAuthorization


<PageTitle>Search</PageTitle>

<div class="container">
    <h3>Feedback</h3>

    <div class="form-group">
        <label for="feedbackType">Feedback Type:</label>
        <select id="feedbackType" class="form-control" @bind="@selectedFeedbackType">
            @foreach (var type in feedbackTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="feedbackText">Feedback:</label>
        <textarea id="feedbackText" class="form-control" @bind="@feedbackText" rows="5"></textarea>
    </div>

    <button class="btn btn-primary" @onclick="SendFeedback">Send</button>
</div>
@code {
    private string feedbackText;
    private string selectedFeedbackType;
    private List<string> feedbackTypes = new List<string> { "General", "Bug", "Suggestion" };

    private void SendFeedback()
    {
        // Implement your logic to send feedback here
        // For example, you can send feedback to a server or store it locally
        // For simplicity, let's just display the feedback in the console
        Console.WriteLine($"Type: {selectedFeedbackType}, Feedback: {feedbackText}");

        // Clear the feedback text after sending
        feedbackText = string.Empty;
    }
}
